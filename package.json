{
  "name": "devforum-app",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.backend.json && vite build",
    "preview": "vite preview",
    "chat-server": "node server/chatServer.js",
    "dev:all": "concurrently \"npm run dev\" \"npm run chat-server\" \"npm run nest:dev\"",
    "nest:dev": "node --loader ts-node/esm backend/main.ts",
    "build:backend": "tsc -p tsconfig.backend.json",
    "start:backend": "node dist/backend/main.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name core_entities",
    "prisma:deploy": "prisma migrate deploy",
    "db:seed": "node dist/backend/seed.js",
    "docker:start": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:restart": "docker-compose down && docker-compose up -d",
    "docker:logs": "docker-compose logs -f",
    "docker:build": "docker-compose build",
    "docker:clean": "docker-compose down -v && docker system prune -f",
    "docker:db-migrate": "docker-compose exec backend npx prisma migrate deploy",
    "docker:db-seed": "docker-compose exec backend npm run db:seed",
    "docker:db-reset": "docker-compose exec backend npx prisma migrate reset --force && docker-compose exec backend npm run db:seed"
  },
  "dependencies": {
    "@nestjs/bullmq": "^10.0.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@prisma/client": "^5.18.0",
    "autoprefixer": "^10.4.21",
    "bullmq": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^5.1.0",
    "ioredis": "^5.3.2",
    "lucide-react": "^0.424.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^9.2.1",
    "postcss": "^8.4.41",
    "prisma": "^5.18.0",
    "tailwindcss": "^3.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2",
    "vite": "^5.4.0"
  }
}
